<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yc.mapper.CoursysMapper">

	<!-- 查询课程体系 -->
	<select id="selectCoursys" parameterType="Coursys" resultType="Coursys">
		select cs_id,cs_name,cs_pic,cs_version,cs_text,cs_status from coursys where 1=1
		<choose>
			<when test="cs_id>0">
				and cs_id=#{cs_id}
			</when>
			<when test="cs_name!=null">
				and cs_name=#{cs_name}
			</when>
			<when test="cs_version!=null">
				and cs_version=#{cs_version}
			</when>
			<otherwise>

			</otherwise>
		</choose>
	</select>
	<!-- 添加一个课程体系 -->
	<insert id="addOneCoursys" parameterType="Coursys" useGeneratedKeys="true" keyProperty="cs_id">
		insert into coursys(cs_name,cs_pic,cs_version,cs_text,cs_status) values(#{cs_name},#{cs_pic},#{cs_version},#{cs_text},#{cs_status})
	</insert>
	<!-- 修改一个课程体系 -->
	<update id="updateOneCoursys" parameterType="Coursys">
		update coursys set cs_name=#{cs_name},cs_pic=#{cs_pic},cs_version=#{cs_version},cs_text=#{cs_text},cs_status=#{cs_status} where cs_id=#{cs_id}
	</update>
	<!-- 删除一条课程体系 -->
	<delete id="deleteCoursys" parameterType="Coursys">
		delete from coursys where cs_id=#{cs_id}
	</delete>
	<!-- 查询当前课程体系表中是否存在所查记录  -->
	<select id="judge" parameterType="Coursys" resultType="Coursys">
		select cs_id,cs_name,cs_pic,cs_version,cs_text,cs_status from coursys where cs_id = #{cs_id} limit 1; 
	</select>
</mapper>